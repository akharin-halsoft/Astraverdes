<div class="page-width cancel-form page-width--narrow section-{{ section.id }}-padding">
  {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'text' -%}
  <h1 class="cancel-page-title page-title h0">
    {{ page.title | escape }}
  </h1>
  <div class="rte">
    {{ page.content }}
  </div>
  
  {%- when 'form' -%}
 <div class="cancel-form-wrapper contact">
{% form 'contact' %}
    {%- if form.posted_successfully? -%}
        <div class="form-status form-status-list form__message" tabindex="-1" autofocus>{% render 'icon-success' %} {{ 'templates.contact.form.post_success' | t }}</div>
      {%- elsif form.errors -%}
        <div class="form__message">
          <h2 class="form-status caption-large text-body" role="alert" tabindex="-1" autofocus>{% render 'icon-error' %} {{ 'templates.contact.form.error_heading' | t }}</h2>
        </div>
        <ul class="form-status-list caption-large" role="list">
          <li>
             {{ form.errors | default_errors }}
          </li>
        </ul>
      {%- endif -%}
  <div class="first-name field">    
    <input type="text" name="contact[first_name]" id="cancelForm-first-name"  class="field__input" placeholder="{{ 'templates.cancel_form.form.first_name' | t }}"/>
    <label for="cancelForm-first-name" class="field__label"> {{ 'templates.cancel_form.form.first_name' | t }}</label>
  </div>

  <div class="last-name field">
    <input type="text" name="contact[last_name]" id="cancelForm-last-name"  class="field__input" placeholder="{{ 'templates.cancel_form.form.last_name' | t }}"/>
    <label for="cancelForm-last-name" class="field__label"> {{ 'templates.cancel_form.form.last_name' | t }}</label>
  </div>

  <div class="order-number field">    
    <input type="text" name="contact[order_number]" id="cancelForm-order-number"  class="field__input" placeholder="{{ 'templates.cancel_form.form.order_number' | t }}*" required/>
    <label for="cancelForm-order-number" class="field__label"> {{ 'templates.cancel_form.form.order_number' | t }}*</label>
  </div>
  
  <div class="phone field">
      <input type="tel" name="contact[phone]" id="cancelForm-phone"  class="field__input" placeholder="{{ 'templates.cancel_form.form.phone' | t }}"/>
    <label for="cancelForm-phone" class="field__label">{{ 'templates.cancel_form.form.phone' | t }}</label>
  </div>

  <div class="email field">
    <input type="email" name="contact[email]" id="cancelForm-email"  class="field__input" placeholder="{{ 'templates.cancel_form.form.email' | t }}*" required/>
    <label for="cancelForm-email" class="field__label">{{ 'templates.cancel_form.form.email' | t }}*</label>
  </div>

  <div class="message field">
    <textarea name="contact[body]" id="cancelForm-message" class="text-area field__input" placeholder="{{ 'templates.cancel_form.form.reason' | t }}"></textarea>
    <label for="cancelForm-message" class="field__label">{{ 'templates.cancel_form.form.reason' | t }}</label>
  </div>

  <div class="submit">
    <input type="submit" value="{{ 'templates.cancel_form.form.submit_button' | t }}" />
  </div>
{% endform %}
</div>
    {%- when 'textarea' -%}
    {%- if block.settings.footer_text != blank -%}
  <div class="desclaimer">
      <p>
      {{ block.settings.footer_text }}
      </p>
      </div>
          {% endif %}
        {%- endcase -%}
      {%- endfor -%}
</div>

{% schema %}
  {
    "name": "Cancel From",
    "settings": [],
    "blocks": [
       {
        "type": "text",
        "name": "Page Content", 
        "limit": 1
      },
      {
        "type": "form",
        "name": "Cancel Form",
        "limit": 1
      },
      {
        "type": "textarea",
        "name": "Footer Text",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "footer_text",
            "default": "לתשומת ליבך, בהיעדר פרטים שיאפשרו לזהות את העסקה ו/או את המוצר/ים מתוך העסקה שהנך מבקש/ת לבטל, יחול עיכוב בביטול עד להבהרת הפרטים באמצעות פרטי הקשר שבידי החברה. לידיעתך: במקרה בו המוצר כבר נשלח אלייך ממחסני החברה, הביטול יבוצע לאחר החזרתו למשרדי החברה או לאחת מחנויות הרשת באריזה המקורית וללא שנעשה בו שימוש.",
            "label": "Footer Text"
          }    	     
        ]
      }      
    ],
    "presets": [
      {
      "name": "Cancel From",
      "blocks": [
        {
          "type": "text"
        },
        {
          "type": "textarea"
        },
        {
          "type": "form"
        }
      ]
    }
    ]
  }
{% endschema %}

{% stylesheet %}
  .cancel-form 
 .body-content>ul {
    margin: 50px 0;
    padding: 0;
}

.cancel-form .body-content>ul>li {
    list-style: none;
}


.cancel-form .cancel-form-wrapper .submit  input {
    font-size: 1.5rem;
    letter-spacing: .1rem;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    border: 0;
    padding: 0 3rem;
    cursor: pointer;
    background-color: #000;
    color: #fff;
    min-width: 150px;
    min-height: 60px;
    margin: 10px 0;
}

.cancel-form .cancel-form-wrapper  .desclaimer {
    font-size: 13px;
}


.cancel-form .cancel-form-wrapper form > div {
    margin: 20px 0;
} 
{% endstylesheet %}

